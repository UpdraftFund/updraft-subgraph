  "scripts": {
    "codegen": "graph codegen",
    "build:arbitrum-sepolia": "graph build --network arbitrum-sepolia",
    "build:arbitrum": "graph build --network arbitrum-one",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ --ipfs=https://ipfs.network.thegraph.com updraft",
