    "create-local": "graph create --node http://localhost:8020/ updraft",
    "remove-local": "graph remove --node http://localhost:8020/ updraft",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 updraft",
    "test": "graph test"
